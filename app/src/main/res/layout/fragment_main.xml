<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#99000000">

        <TextView
            android:id="@+id/toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:textColor="@color/color_text_title"
            fontPath="fonts/PIXELADE.TTF"
            tools:ignore="MissingPrefix"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/toolbar_search"
            android:layout_width="@dimen/toolbar_menu_width"
            android:layout_height="@dimen/toolbar_menu_height"
            android:src="@drawable/search_icons"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/toolbar_header">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"
            android:src="@drawable/listmenu"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/favourite"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/rate"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>